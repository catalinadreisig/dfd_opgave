---
import "../styles/global.css";

const { body = "bagde", color = "yellow_bg" } = Astro.props;
---

<div class={color}>
  {body}
</div>

<style>
  div {
    font-family: Lato;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 147.5%; /* 23.6px */
    letter-spacing: 0.15rem;
    text-transform: uppercase;
  }
  .yellow {
    background-color: var(--black);
    color: var(--yellow_bg);
  }
  .green {
    background-color: var(--white);
    color: var(--green_bg);
  }
</style>
