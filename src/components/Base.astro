---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Base astro</title>
  </head>

  <body>
    <header>HEADER</header>
    <main>
      <slot />
    </main>
    <footer>FOOTER</footer>
  </body>
</html>

<style>
  header,
  footer {
    height: 80px;
    background: hotpink;
    font-size: 4rem;
    font-weight: bold;
    color: black;
  }
  main {
    display: grid;
    grid-template-columns:
      [full-start]1fr
      [content]minmax(0, var(--content-width))
      1fr [full-end];
    gap: 1rem;

    > * {
      grid-column: content;
    }

    .full {
      grid-column: full;
    }
  }
</style>
